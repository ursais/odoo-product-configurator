<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="attrib_value_comp_rule" model="ir.rule">
            <field name="name">Attribute value line multi-company</field>
            <field name="model_id" ref="model_product_attribute_value_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">
                ['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]
            </field>
        </record>
        
        <record id="attrib_value_comp_rule_manager" model="ir.rule">
            <field name="name">Attribute value multi-company</field>
            <field name="model_id" ref="base.model_res_company"/>
            <field name="groups" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
            <field name="domain_force">
                [(1,'=',1)]
            </field>
        </record>

    </data>
</odoo>
